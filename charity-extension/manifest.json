{
  "manifest_version": 3,
  "name": "Aspiration Demo",
  "version": "1.0",
  "description": "Simulate round-up charity donations on shopping sites.",
  "permissions": ["storage", "scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/*"],
      "js": ["content.js"]
    },
    {
      "matches": ["http://localhost:8080/*", "http://127.0.0.1:8080/*"],
      "js": ["content_script.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
